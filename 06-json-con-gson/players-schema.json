{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "minLength": 3,
        "maxLength": 50
      },
      "age": {
        "type": "integer",
        "minimum": 0
      },
      "country": {
        "type": "string"
      },
      "active": {
        "type": "boolean"
      },
      "email": {
        "type": "string",
        "format": "email"
      },
      "hobbies": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "grandSlams": {
        "type": "object",
        "additionalProperties": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "required": [
      "name",
      "age",
      "country",
      "active",
      "email",
      "hobbies",
      "grandSlams"
    ]
  }
}